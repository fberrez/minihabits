{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backend",
        "command": "./node_modules/.bin/tsc -p apps/backend/tsconfig.build.json"
      },
      "configurations": {
        "production": {
          "command": "./node_modules/.bin/tsc -p apps/backend/tsconfig.build.json"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/backend/main.js"
      },
      "configurations": {
        "development": {
          "command": "./node_modules/.bin/ts-node -r tsconfig-paths/register apps/backend/src/main.ts"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/backend/src/**/*.ts",
          "apps/backend/test/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/backend/Dockerfile -t minihabits-backend ."
      }
    }
  },
  "tags": ["scope:backend", "type:app"]
} 