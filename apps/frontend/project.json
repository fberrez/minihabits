{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend",
        "command": "vite build"
      },
      "configurations": {
        "development": {
          "command": "vite build"
        },
        "production": {
          "command": "vite build"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "cwd": "apps/frontend",
        "command": "vite preview"
      },
      "configurations": {
        "development": {
          "command": "vite preview"
        },
        "production": {
          "command": "vite preview"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/frontend/src/**/*.ts",
          "apps/frontend/test/**/*.ts"
        ]
      }
    },
    "generate-api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/frontend/src/api/openapi-config.ts",
        "cwd": "apps/frontend"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/frontend/Dockerfile -t minihabits-frontend ."
      }
    }
  },
  "tags": ["scope:frontend", "type:app"]
} 