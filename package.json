{
  "name": "minihabits",
  "version": "0.0.1",
  "description": "MiniHabits Monorepo - Backend and Frontend",
  "author": "",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --projects=backend,frontend",
    "serve": "nx run-many --target=serve --projects=backend,frontend --parallel",
    "dev": "nx run-many --target=serve --projects=backend,frontend --parallel",
    "lint": "nx run-many --target=lint --projects=backend,frontend",
    "test": "nx run-many --target=test --projects=backend,frontend",
    "format": "nx run-many --target=format --projects=backend,frontend",
    "build:backend": "nx build backend",
    "build:frontend": "nx build frontend",
    "serve:backend": "nx serve backend",
    "serve:frontend": "nx serve frontend"
  },

  "devDependencies": {
    "@nx/nest": "^21.3.0",
    "@nx/react": "^21.3.0",
    "@nx/vite": "^21.3.0",
    "@nx/webpack": "^21.3.0",
    "@nx/workspace": "^21.3.0",
    "nx": "^21.3.0",
    "typescript": "^5.1.3",
    "webpack-cli": "^6.0.1"
  },

  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
