{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "minihabits",
  "version": "0.1.0",
  "identifier": "co.fberrez.minihabits",
  "build": {
    "frontendDist": "../apps/frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev:frontend",
    "beforeBuildCommand": "pnpm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "minihabits",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "bundleVersion": "100"
    }
  }
}
